package projects.mainProject.dominio;

public class Alumno  extends Persona{

    private String perfil;
    private String carrera;

    public Alumno (String perfil, String carrera) {
        this.perfil = perfil;
        this.carrera = carrera;
    }

    public Alumno(String name, String lastName, String perfil, String carrera, Long dni) {
        super(name, lastName, dni);
        this.perfil = perfil;
        this.carrera = carrera;
    }

    @Override
    public String toString() {
        return "Alumno{" +
                "id='" + this.id + '\'' +
                ", name='" + this.name + '\'' +
                ", lastName='" + this.lastName + '\'' +
                ", dni=" + this.dni +
                ", unionDatos='" + this.unionDatos + '\'' +
                ", perfil='" + this.perfil + '\'' +
                ", carrera='" + this.carrera + '\'' +
                '}';
    }
}


#########################################################################################################

package projects.mainProject.dominio;

public class Persona {

    protected String name;
    protected String lastName;
    protected Long dni;
    protected int id;

    protected String unionDatos;

    private static int contadorPersonas;

    public Persona() {
    }

    public Persona(String name) {
        this.name = name;
        Persona.contadorPersonas++;
        this.id = Persona.contadorPersonas;
    }

    public Persona(String name, String lastName, Long dni) {
        this.name = name;
        this.lastName = lastName;
        this.dni = dni;
        Persona.contadorPersonas++;
        this.id = Persona.contadorPersonas;
    }

    public void getInfoPersona() {
        System.out.println("name: " + this.name);
        System.out.println("lastName: " + this.lastName);
        System.out.println("dni: " + this.dni);
    }

    public void getInfoPersonaPorParam(String name, String lastName) {
        getInfoPersona();
    }

    public String getUnionDatos() {
        String separator = " - ";

        unionDatos = name + separator + lastName;

        return unionDatos;
    }


    @Override
    public String toString() {
        return "Persona{" +
                "name='" + name + '\'' +
                ", lastName='" + lastName + '\'' +
                ", dni=" + dni +
                ", unionDatos='" + unionDatos + '\'' +
                ", id=" + id +
                '}';
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public static int getContadorPersonas() {
        return contadorPersonas;
    }

    public static void setContadorPersonas(int contadorPersonas) {
        Persona.contadorPersonas = contadorPersonas;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getLastName() {
        return lastName;
    }

    public void setLastName(String lastName) {
        this.lastName = lastName;
    }

    public Long getDni() {
        return dni;
    }

    public void setDni(Long dni) {
        this.dni = dni;
    }
}
